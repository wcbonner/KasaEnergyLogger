# Contents of /etc/systemd/system/kasaenergylogger.service
[Unit]
Description=KasaEnergyLogger service
After=network-online.target
Requires=network.target
StartLimitIntervalSec=0

[Service]
Type=simple
Restart=always
RestartSec=5
ExecStart=/usr/local/bin/kasaenergylogger -v 0 -l /var/log/kasaenergylogger/
KillSignal=SIGINT

[Install]
WantedBy=multi-user.target
